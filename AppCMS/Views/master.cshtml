@inherits UmbracoViewPage
@{
	Layout = null;
	
	var home = (Home)Model.Root();
}

@* the fun starts here *@

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Model.Name -- @home.WebsiteSitename</title>
    <meta name="description" content="@home.WebsiteDescription">
    <meta name="author" content="">

    <!-- TODO: Add CSS, JS etc. section -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/s.css" />
    <link rel="stylesheet" href="~/css/navigation.css" />

</head>
    
<body>

    <div class="navigation-bar-wrapper">
        <div class="container navigation-bar-container">
            <div class="navigation-identity-wrapper">
                <img src="@home.NavbarLogo.Url" />
                <p id="navigation-identity-name">AppCMS</p>
            </div>
            <div class="navigation-items-wrapper">
                @Html.Partial("~/views/partials/Navigation/_topNavigation.cshtml")
            </div>
            <div class="hamburger-wrapper">
                <div class="hamburger-lines" id="hamburger-menu-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </div>

    <div id="responsive-menu-wrapper">
        <div>
            <span id="responsive-menu-close" class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
        </div>
        @Html.Partial("~/views/partials/Navigation/_topNavigation.cshtml")
    </div>

    @RenderBody()
    
    @{    
        if(Model.Name == "Sign In" || Model.Name == "Sign Up")
        {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
        }
        if(Model.Name == "Sign Up")
        {
            <script src="~/scripts/signupValidation.js"></script>
        }
        else if(Model.Name == "Sign In")
        {
            <script src="~/scripts/loginValidation.js"></script>
        }
    }

    <script>
        $(function () {
            $("#hamburger-menu-icon").click(function () {
                $("#responsive-menu-wrapper").addClass("show-fullscreen-menu");
            });
            $("#responsive-menu-close").click(function () {
                $("#responsive-menu-wrapper").removeClass("show-fullscreen-menu");
            });
        });
    </script>
    
</body>
    
    
</html>